{
  "name": "forma",
  "image": "mcr.microsoft.com/devcontainers/go:1.25",
  
  "customizations": {
    "vscode": {
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go"
      },
      "extensions": [
        "golang.go"
      ]
    }
  },

  "postCreateCommand": "go mod download",
  
  "remoteUser": "vscode"
}